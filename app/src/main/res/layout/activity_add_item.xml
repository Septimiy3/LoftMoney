<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".AddItemActivity"
    android:orientation="vertical">
    
    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="@dimen/layout_marginTop100dp"
        android:layout_marginStart="@dimen/layout_marginStart_End32dp"
        android:layout_marginEnd="@dimen/layout_marginStart_End32dp"
        android:hint="@string/add_item_hint_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/name"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_24sp"
            android:inputType="text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />
    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:layout_marginTop="@dimen/layout_marginTop16dp"
        android:layout_marginStart="@dimen/layout_marginStart_End32dp"
        android:layout_marginEnd="@dimen/layout_marginStart_End32dp"
        android:hint="@string/add_item_hint_price"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/price"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/text_size_24sp"
            android:inputType="number"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </com.google.android.material.textfield.TextInputLayout>


    
    <com.google.android.material.button.MaterialButton
        style="@style/Widget.MaterialComponents.Button.TextButton"
        app:icon="@drawable/ic_chek"
        app:iconTint="@color/color_add_buttom"
        android:id="@+id/add_button"
        android:drawableStart="@drawable/ic_chek"
        android:enabled="false"
        android:background="@null"
        android:drawablePadding="@dimen/drawablePadding8dp"
        android:textSize="@dimen/text_size_18sp"
        android:textColor="@color/color_add_buttom"
        android:layout_marginTop="@dimen/layout_marginTop48dp"
        android:layout_gravity="center_horizontal"
        android:text="@string/add_item_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</LinearLayout>